{% extends '::base.html.twig' %}

{% block body %}
    <h1>Candidato list</h1>

    {% if entities %}
    <table class="records_list table table-condensed table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Sigla do partido</th>
                <th>NÃºmero do candidato</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.nome }}</td>
                <td>{{ entity.partido.sigla }}</td>
                <td>{{ entity.numero }}</td>
                <td>
                    <a class="btn" href="{{ path('candidato_show', { 'id': entity.id }) }}">show</a>
                    <a class="btn" href="{{ path('candidato_edit', { 'id': entity.id }) }}">edit</a>                
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
        <div class="no-records-msg">
            There is no saved records
        </div>
    {% endif %}

        <a class="btn btn-success" href="{{ path('candidato_new') }}">
        Create a new entry
    </a>
{% endblock %}
