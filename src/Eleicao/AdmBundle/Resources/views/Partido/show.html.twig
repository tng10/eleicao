{% extends '::base.html.twig' %}

{% block body %}
    <h1>Partido</h1>

    <table class="record_properties table table-condensed table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Sigla</th>
                <td>{{ entity.sigla }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ entity.nome }}</td>
            </tr>
        </tbody>
    </table>

        <a class="btn" href="{{ path('partido') }}">
    Back to the list
</a>


    <a class="btn btn-success" href="{{ path('partido_edit', { 'id': entity.id }) }}">
        Edit
    </a>
    <form action="{{ path('partido_delete', { 'id': entity.id }) }}" method="post" style="float:right">
        <button class="btn btn-danger" type="submit" onclick="return confirm('Do you really want to remove this element?');">Delete</button>
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
    </form>
{% endblock %}
