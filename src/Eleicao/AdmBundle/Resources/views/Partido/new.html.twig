{% extends '::base.html.twig' %}

{% block body %}
    <h1>Novo Partido</h1>

    <form class="form-horizontal" action="{{ path('partido_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form, {'form_type': 'horizontal'}) }}
        <div class="control-group">
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Cadastrar</button>
                <a class="btn btn-info" href="{{ path('partido') }}">
                    Listar registros
                </a>
            </div>
        </div>
    </form>

{% endblock %}

