    {% extends '::base.html.twig' %}

{% block body %}
    <h1>Proposta list</h1>

    {% if entities %}
    <table class="records_list table table-condensed table-hover">
        <thead>
            <tr>
                <th>Candidato</th>
                <th>Texto</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('proposta_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.candidato }}</td>
                <td>{{ entity.texto | slice(1,30) ~ ' ...' }}</td>
                <td>
                    <a class="btn" href="{{ path('proposta_show', { 'id': entity.id }) }}">show</a>
                    <a class="btn" href="{{ path('proposta_edit', { 'id': entity.id }) }}">edit</a>                
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
        <div class="no-records-msg">
            There is no saved records
        </div>
    {% endif %}

        <a class="btn btn-success" href="{{ path('proposta_new') }}">
        Create a new entry
    </a>
    {% endblock %}
