{% extends '::base.html.twig' %}

{% block body %}
    <h1>Proposta</h1>

    <table class="record_properties table table-condensed table-hover">
        <tbody>
            <tr>
                <th>Partido</th>
                <td>{{ entity.candidato.partido }}</td>
            </tr>
            <tr>
                <th>Candidato</th>
                <td>{{ entity.candidato }}</td>
            </tr>
            <tr>
                <th>NÃºmero do candidato</th>
                <td>{{ entity.candidato.numero }}</td>
            </tr>
            <tr>
                <th>Texto</th>
                <td>{{ entity.texto }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn" href="{{ path('proposta') }}">
        Back to the list
    </a>


    <a class="btn btn-success" href="{{ path('proposta_edit', { 'id': entity.id }) }}">
        Edit
    </a>
    
    <form action="{{ path('proposta_delete', { 'id': entity.id }) }}" method="post" style="float:right">
        <button class="btn btn-danger" type="submit" onclick="return confirm('Do you really want to remove this element?');">Delete</button>
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
    </form>
{% endblock %}
